{
  "compilerOptions": {
    "target": "ES2020",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "baseUrl": "./",
    "paths": {
      "@": ["src"],
      "@/*": ["src/*"],
      "@script": ["script"],
      "@script/*": ["script/*"],
      "@temp/*": ["temp/*"],
      "@shared-types/*": ["types/*"],
      "@core": ["src/core"],
      "@core/*": ["src/core/*"],
      "@utils": ["src/utils"],
      "@utils/*": ["src/utils/*"]
    },
    "esModuleInterop": true,
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src", "temp", "scripts", "types"]
}
